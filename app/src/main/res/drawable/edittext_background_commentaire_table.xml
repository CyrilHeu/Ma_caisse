<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">

    <!-- Couleur de fond d'un post-it -->
    <solid android:color="#FFF9C4"/> <!-- Couleur jaune clair pour ressembler à un post-it -->

    <!-- Coins arrondis pour donner l'effet de papier -->
    <corners android:radius="12dp"/> <!-- Tu peux ajuster la valeur pour plus ou moins de rondeur -->

    <!-- Bordure légèrement grise pour donner un effet de contour doux -->
    <stroke android:width="1dp" android:color="#AAAAAA"/>

    <!-- Ajout d'une ombre pour donner de la profondeur (facultatif) -->
    <padding android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp"/>

</shape>

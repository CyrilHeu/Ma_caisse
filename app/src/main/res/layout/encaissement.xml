<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Total :"
                android:textAlignment="center"
                android:textSize="10pt"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvPaiementTotal"
                android:text="0.0€"
                android:textAlignment="center"
                android:textSize="14pt"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Solde :"
                android:textAlignment="center"
                android:textSize="10pt"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvPaiementRestant"
                android:text="0.0€"
                android:textAlignment="center"
                android:textSize="14pt"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Saisie :"
                android:textAlignment="center"
                android:textSize="10pt"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/tvPaiementSaisie"
                android:text=""
                android:textAlignment="center"
                android:textSize="14pt"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="À rendre :"
                android:textAlignment="center"
                android:textSize="10pt"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvPaiementArendre"
                android:text="0.0€"
                android:textAlignment="center"
                android:textSize="14pt"
                ></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75px">

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="7"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="8"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="9"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75px">

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="4"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="5"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="6"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75px">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="1"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="2"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="3"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75px">

            <Button
                android:id="@+id/btnvirgule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="."/>

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="0"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:textSize="12pt"
                android:layout_weight="1"
                android:text="C"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnPayerCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4sp"
                android:layout_weight="1"
                android:text="CB"
                android:textSize="12pt"/>

            <Button
                android:id="@+id/btnPayerEspece"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4sp"
                android:layout_weight="1"
                android:text="Espèce"
                android:textSize="12pt" />

            <Button
                android:id="@+id/btnPayerTR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4sp"
                android:layout_weight="1"
                android:text="TR"
                android:textSize="12pt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnDiviser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4sp"
                android:text="Diviser"
                android:textSize="6pt"/>

            <Button
                android:id="@+id/btnSeparation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4sp"
                android:text="Séparer"
                android:textSize="6pt"/>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>
